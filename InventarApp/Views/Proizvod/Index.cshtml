@model IEnumerable<InventarApp.Models.Proizvod>

@{
    ViewData["Title"] = "Inventar Proizvoda";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">
            <i class="bi bi-box-seam"></i> Inventar Proizvoda
        </h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Dodaj Proizvod
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Naziv</th>
                                <th class="text-end">Cijena (€)</th>
                                <th class="text-center">Količina</th>
                                <th class="text-end">Ukupna Vrijednost (€)</th>
                                <th class="text-center">Akcije</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>#@item.Id</strong></td>
                                    <td>@item.Naziv</td>
                                    <td class="text-end">@item.Cijena.ToString("N2")</td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@item.Kolicina</span>
                                    </td>
                                    <td class="text-end">
                                        <strong>@item.IzracunajUkupnuVrijednost().ToString("N2")</strong>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Uredi">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Obriši">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="4" class="text-end"><strong>UKUPNA VRIJEDNOST:</strong></td>
                                <td class="text-end">
                                    <strong class="text-success">@Model.Sum(x => x.IzracunajUkupnuVrijednost()).ToString("N2") €</strong>
                                </td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">Nema proizvoda u inventaru</h4>
            <p>Kliknite na "Dodaj Proizvod" da dodate prvi proizvod.</p>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
