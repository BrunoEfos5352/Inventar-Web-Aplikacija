@model InventarApp.Models.Proizvod

@{
    ViewData["Title"] = "Obriši Proizvod";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Obriši Proizvod
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">Jeste li sigurni da želite obrisati ovaj proizvod?</h4>
                        <p class="mb-0">Ova radnja se ne može poništiti.</p>
                    </div>
                    
                    <dl class="row mt-4">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8"><strong>#@Model.Id</strong></dd>
                        
                        <dt class="col-sm-4">Naziv:</dt>
                        <dd class="col-sm-8">@Model.Naziv</dd>
                        
                        <dt class="col-sm-4">Cijena:</dt>
                        <dd class="col-sm-8">@Model.Cijena.ToString("N2") €</dd>
                        
                        <dt class="col-sm-4">Koli?ina:</dt>
                        <dd class="col-sm-8">@Model.Kolicina</dd>
                        
                        <dt class="col-sm-4">Ukupna Vrijednost:</dt>
                        <dd class="col-sm-8"><strong class="text-success">@Model.IzracunajUkupnuVrijednost().ToString("N2") €</strong></dd>
                    </dl>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Odustani
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Obriši Proizvod
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
